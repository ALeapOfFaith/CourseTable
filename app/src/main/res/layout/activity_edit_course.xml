<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="450dp"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context=".activity.EditCourseActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="编辑课程"
            android:textAlignment="center"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_course"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="课程名："
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_p2_editCourse_course"
            android:layout_width="196dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_teacher"
            android:layout_width="46dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="授课教师："
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_p2_editCourse_teacher"
            android:layout_width="188dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_startWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="开始周次："
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/input_p2_editCourse_startWeek"
            android:layout_width="198dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:entries="@array/week" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_endWeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="结束周次"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/input_p2_editCourse_endWeek"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:entries="@array/week" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上课星期"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/input_p2_editCourse_day"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:entries="@array/day" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_time"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上课节次"
            android:textAlignment="center" />

        <Spinner
            android:id="@+id/input_p2_editCourse_time"
            android:layout_width="259dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:entries="@array/time" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_p2_editCourse_classroom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="上课教室："
            android:textAlignment="center" />

        <EditText
            android:id="@+id/input_p2_editCourse_classroom"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="text"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <Button
            android:id="@+id/button_p2_editCourse_yes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确定修改" />

        <Button
            android:id="@+id/button_p2_editCourse_delete"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="删除课程" />

        <Button
            android:id="@+id/button_p2_editCourse_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消" />
    </LinearLayout>
</LinearLayout>